
.__mpx_toast__
  display none
  &.show
    display block
  .__mpx_mask__
    position fixed
    z-index 1000
    top 0
    right 0
    left 0
    bottom 0
    display none
    &.show
      display block
  .__mpx_toast_box__
    position fixed
    top 50%
    left 50%
    z-index 2000
    box-sizing border-box
    display flex
    flex-direction column
    justify-content center
    min-width 120px
    max-width 200px
    min-height 120px
    text-align center
    line-height 1.6
    color #fff
    padding 15px
    border-radius 5px
    background rgba(20, 20, 20, 0.7)
    transform translate(-50%, -50%)
    &.no-icon
      min-height 0
      padding 10px 15px
    .__mpx_toast_icon__
      width 40px
      height 40px
      background-size 100%
      background-color transparent
      background-repeat no-repeat
      margin 6px auto
      &.hide
        display none
      &.success
        background-image url("data:image/svg+xml;base64,")
      &.loading
        background-image url("data:image/svg+xml;base64,")
        animation loading-ani 1s steps(12, end) infinite

    .__mpx_toast_title__
      font-size 16px
      margin 0
  
  @keyframes loading-ani
    0%
      transform rotate(0deg)
    100%
      transform rotate(360deg)
